<body>

<h1>ðŸ›’ Your Cart</h1>

<div id="cartContainer"></div>
<div id="totalBox" class="total-box"></div>

<div style="text-align: center; margin-top: 20px;">
  <button id="checkoutBtn" style="
    background: #e91e63;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
  ">Proceed to Checkout</button>
</div>

<script>
  let cart = JSON.parse(localStorage.getItem("cart")) || [];
let container = document.getElementById("cartContainer");
let totalBox = document.getElementById("totalBox");

function loadCart() {
  container.innerHTML = "";
  totalBox.innerHTML = "";

  if (cart.length === 0) {
    container.innerHTML = "<p class='empty'>Your cart is empty</p>";
    return;
  }

  let total = 0;

  cart.forEach((item, index) => {

    if (!item.image || !item.price || !item.name) {
      console.log("Missing data for cart item:", item);
      return;
    }

    let numericPrice = Number(item.price.replace(/[^0-9]/g, ""));
    total += numericPrice;

    let card = document.createElement("div");
    card.className = "cart-card";

    card.innerHTML = `
      <img src="${item.image}">
      <p class="name">${item.name}</p>
      <p class="price">â‚¹${numericPrice}</p>
      <button class="remove-btn" onclick="removeFromCart(${index})">Remove</button>
    `;

    container.appendChild(card);
  });

  totalBox.textContent = `Total: â‚¹${total}`;
}

function removeFromCart(index) {
  cart.splice(index, 1);
  localStorage.setItem("cart", JSON.stringify(cart));
  loadCart();
}

loadCart();

 document.getElementById("checkoutBtn").addEventListener("click", function() {
    let cart = JSON.parse(localStorage.getItem("cart")) || [];
    if (cart.length === 0) {
      alert("Your cart is empty!");
      return;
    }
    // Redirect to checkout page
    window.location.href = "checkout.html";
  });

</script>

